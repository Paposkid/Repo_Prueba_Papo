<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>


<appender name="EvalCrediticiaWS" class="org.apache.log4j.RollingFileAppender">
	<param name="File" value="/u01/wlsp/fmw11gr1/domains/ClaroDomainTest004/logs/EvalCrediticiaWS.log"/>
	<param name="MaxFileSize" value="1MB" />
	<param name="MaxBackupIndex" value="3" />
	<param name="Threshold" value="DEBUG" />
	<layout class="org.apache.log4j.PatternLayout">
		<param name="ConversionPattern" value="[%d{dd/MM/yy hh:mm:ss:sss z}] %5p %c{2}: %m%n" />
	</layout>
</appender>

<logger name="com.amx.service.util"> 
	<level value="debug"/> 
	<appender-ref ref="EvalCrediticiaWS"/>
</logger>

</log4j:configuration> 