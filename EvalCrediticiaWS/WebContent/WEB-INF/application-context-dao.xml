<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    
    
    <bean id="sqlSessionFactoryLocal" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="dataSourceJndiLOCAL" />
        <property name="configLocation" value="WEB-INF/sqlmap-config.xml" />
        <property name="configurationProperties" ref="configuracionProperties" />
    </bean>
    
    <bean id="sqlSessionLocal" class="org.mybatis.spring.SqlSessionTemplate">
        <constructor-arg index="0" ref="sqlSessionFactoryLocal" />
    </bean>

    <!-- scan for mappers and let them be autowired para el Dao de Mybatis -->
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.amx.service.dao" />  
    </bean>
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.amx.service.validator" />  
    </bean>
</beans> 