<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cl.clarochile.aplicaciones.evalcrediticia.dao.TipoReglaDAO">

	<resultMap id="resultTipoRegla" type="tipoReglaTO">
		<result property="codigo" column="CORR_TIPOREGLA" />
		<result property="nombre" column="NOMB_TIPOREGLA" />
		<result property="estado" column="ESTADO" />
		<result property="fechaAlta" column="FECH_ALTA" />
		<result property="usuarioAlta" column="CORR_USUARIOALTA" />
		<result property="fechaModificacion" column="FECH_MODIFICACION" />
		<result property="usuarioModificacion" column="CORR_USUARIO" />
	</resultMap>

	<parameterMap id="tipoReglaParam" type="tipoReglaTO">
		<parameter property="resultados" jdbcType="CURSOR" javaType="java.sql.ResultSet" mode="OUT" resultMap="resultTipoRegla" />
	</parameterMap>

	<select id="listarTiposReglas" parameterMap="tipoReglaParam" resultMap="resultTipoRegla" parameterType="tipoReglaTO" statementType="CALLABLE">
		{ call PRO_EVC_LISTARTIPOREGLAS
		(
		#{codigo, mode=IN, jdbcType=VARCHAR},
		#{nombre, mode=IN, jdbcType=VARCHAR},
		#{resultados, jdbcType=CURSOR, mode=OUT, resultMap=resultTipoRegla, javaType=java.sql.ResultSet}
		)
		}
	</select>

</mapper>